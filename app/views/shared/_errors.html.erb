<% if obj.errors.any? %>
  <div class="alert alert-danger text-start alert-dismissable fade show" role="alert">
    <div class="d-flex justify-content-between">
      <h4 class="alert-heading h5">The <%= obj.class.name.downcase %> cannot be saved.</h4>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
        <li class="small"><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
